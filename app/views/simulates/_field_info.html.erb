<div id="field_status" class="panel right_panel">
	<header>
  	<h3 class="header_title">ステージ情報</h3>
	</header>
	<form class="form-horizontal" role="form">
  	<div class="form-group">
    	<label class="control-label">横幅</label>
    	<div id="play_panel">
  			<input type="number" class="form-control" id="field_width" min="1" max="100" value="30">
			</div>
  	</div>

  	<div class="form-group">
    	<label class="control-label">縦幅</label>
    	<div id="play_panel">
  			<input type="number" class="form-control" id="field_height" min="1" max="100" value="30">
			</div>
  	</div>

  	<div class="form-group">
    	<label class="control-label">グリッドサイズ</label>
    	<div id="play_panel">
  			<input type="number" class="form-control" id="grid_size" min="1" max="100" value="30">
			</div>
  	</div>

    <div class="form-group">
      <label class="control-label">通信範囲</label>
      <div id="play_panel">
        <input type="number" class="form-control" id="transmit_range" min="1" max="20" value="5">
      </div>
    </div>

    <div class="form-group">
      <label class="control-label">ルーティングプロトコル</label>
      <div id="play_panel">
        <select id="protocol" class="selectpicker">
          <optgroup label="Routing Protocol">
            <option value="0" selected>Epidemic</option>
            <option value="1">Spray and Wait</option>
            <option value="2">ProPHET</option>
            <option value="3">N-Hop Forwarding</option>
          </optgroup>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label">制限時間</label>
      <div id="play_panel">
        <input type="number" class="form-control" id="time_limit" min="1" max="1000000000" value="-1">
      </div>
    </div>
	</form>
</div>